<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/upload_admin_info" />
    <Space
        android:layout_width="@dimen/activity_horizontal_margin"
        android:layout_height="@dimen/activity_horizontal_margin"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/admin_file_name"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:hint="@string/file_name"
            android:inputType="text"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="loadAdminFile"
            android:text="@string/read_file"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">
        <Button
            android:id="@+id/open_admin_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_manually"
            android:onClick="openAdminFile"/>
    </LinearLayout>
    <Button
        android:id="@+id/clear_clients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clear_clients"
        android:onClick="clearClients"/>
    <Button
        android:id="@+id/clear_flights"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clear_flights"
        android:onClick="clearFlights"/>
    <Button
        android:id="@+id/clear_admins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clear_admins"
        android:onClick="clearAdmins"/>
    <Button
        android:id="@+id/clear_passwords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clear_passwords"
        android:onClick="clearPasswords"/>
    <Button
        android:id="@+id/clear_booked_itineraries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clear_booked_itineraries"
        android:onClick="clearBookedItineraries"/>

</LinearLayout>
